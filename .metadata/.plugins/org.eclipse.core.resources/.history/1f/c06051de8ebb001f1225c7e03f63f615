spring.application.name=NimapJavaTest
# Application Name



# Server Configuration
server.port=8080
server.servlet.context-path=/nimap

# Spring Data JPA Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/nimapdb
spring.datasource.username=root
spring.datasource.password=root
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Logging Configuration
logging.level.org.springframework.web=DEBUG
logging.level.org.hibernate.SQL=DEBUG

# Spring Boot Banner Configuration
spring.main.banner-mode=console

# H2 Console (optional for testing, you can disable it in production)
spring.h2.console.enabled=false


